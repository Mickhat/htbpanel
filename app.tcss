/*     width: 95%; */
/*     background: $surface; */
/* } */

#filters-actions-box {
    layout: horizontal;
    align: center middle;
    margin-bottom: 1;
}

#status-radio {
    width: 100%;
    height: 100%;
    margin-bottom: 1;
}

.filter-select {
    height: 100%;
    margin-bottom: 1;
}
